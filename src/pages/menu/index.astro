    { tipoId: '1', nombre: '1 vegetal', cantidad: 1 },
    { tipoId: '7', nombre: '1 grasa con prote√≠na', cantidad: 1 },
    { tipoId: '4', nombre: '1 fruta', cantidad: 1 }
